<Window x:Class="QuestionEditor.Choise"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuestionEditor"
        mc:Ignorable="d"
        Title="Choise" Height="381" Width="669">
    <Grid>
        <ListBox x:Name="choices" HorizontalAlignment="Left" Height="240" Margin="26,40,0,0" VerticalAlignment="Top" Width="263"/>
        <TextBox x:Name="questionText" HorizontalAlignment="Left" AcceptsReturn="True" Height="64" Margin="294,40,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="336"/>
        <Button x:Name="button1" Content="+" HorizontalAlignment="Left" Margin="260,285,0,0" VerticalAlignment="Top" Width="29" Height="29" Click="button1_Click"/>
        <Button x:Name="button" Content="Сохранить" HorizontalAlignment="Left" Margin="555,104,0,0" VerticalAlignment="Top" Width="75" Click="button_Click_1"/>
        <Button x:Name="button2" Content="Готово" HorizontalAlignment="Left" Margin="537,314,0,0" VerticalAlignment="Top" Width="75" Click="button2_Click"/>

    </Grid>
</Window>
