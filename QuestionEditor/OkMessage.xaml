<Window x:Class="QuestionEditor.OkMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuestionEditor"
        mc:Ignorable="d"
        Title="OkMessage" Height="225" Width="399.419" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="#FFF0F0F0">
    <Grid MouseDown="Grid_MouseDown">
        <Grid Height="40" Background="#FF3A3A3A" VerticalAlignment="Top">
            <TextBlock Name="Header" FontSize="18" Margin="5,0,5,0" VerticalAlignment="Center" Foreground="White"/>
        </Grid>

        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="8,45,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="107" Width="373"/>
        <Button x:Name="button" Content="Ок" HorizontalAlignment="Left" Margin="153,181,0,0" VerticalAlignment="Top" Width="100" Click="button_Click" Background="#FF66A663" Foreground="White" Height="28"/>

    </Grid>
</Window>
