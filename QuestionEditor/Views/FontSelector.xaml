<Window x:Class="QuestionEditor.FontSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuestionEditor"
        mc:Ignorable="d"
        Title="Введите размер шрифта" Height="150" Width="300" Background="#FFEEEEEE" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Grid Height="40" Background="#FF3A3A3A" VerticalAlignment="Top">
                <TextBlock Text="Выберите шрифт" Foreground="White" VerticalAlignment="Center" FontSize="18" Margin="10,0,0,0"/>
            </Grid>
            <TextBox x:Name="fontsize" Margin="0,20,0,0" Text="16" Width="170" HorizontalAlignment="Center" Height="30"/>
            <Button Content="Подтвердить" Margin="0,10,0,0" HorizontalAlignment="Center" Height="30" Width="170" BorderBrush="{x:Null}" Foreground="White" Background="#FF3FB654" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
